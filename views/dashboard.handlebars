{{> header}}



<ul class="m-4">
    {{#each posts as |post| }}
    <li class="card custom-card m-2">
        <h2 class="text-center">
            <a href='/post/{{post.id}}'>
                {{post.title}}
                <span class="details"> posted by {{post.user.username}} at {{format_date post.date_created}}</span>
            </a>
        </h2>
        <p class="text-center">
            {{post.description}}
        </p>
    </li>
    {{/each}}
</ul>